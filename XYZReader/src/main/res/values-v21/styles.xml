<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="android:colorPrimary">@color/theme_primary</item>

        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/theme_primary_dark</item>

        <item name="android:colorAccent">@color/theme_secondary</item>

        <item name="android:navigationBarColor">@color/theme_primary_dark</item>
        <item name="android:statusBarColor">@color/theme_primary_dark</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.Bacon.Detail" parent="Theme.Bacon">
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/theme_primary_dark</item>
    </style>
    
</resources>